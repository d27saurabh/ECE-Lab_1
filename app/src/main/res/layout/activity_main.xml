<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.d27sa.ece_lab_1.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:background="#2196F3"
        android:text="HelloWorld"
        android:textSize="36sp"
        android:fontFamily="sans-serif"
        android:textColor="#FFFF"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/textview"
        android:layout_width="170dip"
        android:layout_height="150dip"
        android:layout_marginTop="160sp"
        android:background="#C6FF00"
        android:text="Saurabh Deshpande"
        android:textSize="34sp"
        android:fontFamily="sans-serif"
        android:textColor="#B71C1C"
        android:gravity="center"
        />
    <TextView
        android:layout_width="170dip"
        android:layout_height="150dip"
        android:layout_marginTop="320sp"
        android:background="#673AB7"
        android:text="Team BugDroid"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"/>

    <ImageView
        android:layout_width="170dip"
        android:layout_height="310dip"
        android:layout_toRightOf="@id/textview"
        android:layout_marginTop="160sp"
        android:layout_marginLeft="10sp"
        android:src="@mipmap/saurabh"
        android:scaleType="centerCrop"

        />

</RelativeLayout>
